{
  "emulators": {
    "hosting": {
      "port": 4202
    }
  },
  "hosting": {
    "public": "./dist/projects/movies/browser",
    "cleanUrls": true,
    "trailingSlash": false,
    "ignore": [
      "**/node_modules/**",
      "**/tmp/**",
      "**/.*/**",
      "**/.DS_Store/**",
      "**/.angular/**",
      "**/.firebase/**",
      "**/.git/**",
      "**/.github/**",
      "**/.husky/**",
      "**/.idea/**",
      "**/.local-config/**",
      "**/.stylelintrc/**",
      "**/.vscode/**",
      "**/tooling/**",
      "**/.wrangler/**",
      "**/.gitignore",
      "**/.eslintrc.json",
      "**/.editorconfig",
      "**/.lint-staged.config.js",
      "**/.lintstagedrc.json",
      "**/.prettierignore",
      "**/.prettierrc.json",
      "**/.size-limit.js",
      "**/LICENSE",
      "**/CONTRIBUTING.md",
      "**/README.md",
      "**/commitlint.config.js",
      "**/database.rules.json",
      "**/firebase-debug.log",
      "**/firebase.function.json",
      "**/firebase.hosting.json",
      "**/jest.config.ts",
      "**/jest.preset.js",
      "**/migrations.json",
      "**/nx.json",
      "**/tsconfig.json",
      "**/ui-debug.log",
      "**/wrangler.toml",
      "**/package.json",
      "**/package-lock.json"
    ],
    "headers": [
      {
        "source": "**/*.html",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=0, no-cache"
          }
        ]
      },
      {
        "source": "**/*.@(js|css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31557600"
          }
        ]
      },
      {
        "source": "**/*.@(jpg|jpeg|gif|png|svg|webp|ico)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=604800"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "**",
        "function": "ssr"
      }
    ]
  }
}
